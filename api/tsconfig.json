{
  "compilerOptions": {
    "target": "es2016",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "../dist/api",
    "baseUrl": ".",
    "paths": {
      "@/*": ["../*"],
      "@server/*": ["../server/*"],
      "@shared/*": ["../shared/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/*.ts", "../server/**/*.ts", "../shared/**/*.ts"],
  "exclude": ["../node_modules", "../dist"]
}
